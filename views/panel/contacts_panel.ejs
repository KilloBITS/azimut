<script type="text/javascript">
    var data;
    var map;
    var markerArray = [];


    var removeMarker = function(e){
        map.removeLayer(markerArray[e]);   
        $.post('/removeMapPoint', {a: e}, function(res){
            locationReload(res.message, false);
        })       
    }


    function onMapClick(e) {
        var isConfirm = confirm("Вы действительно хотите добавить метку по координатам: " + e.latlng);
        if(isConfirm){
            data.push({iconclass: 'A', lat: parseFloat(e.latlng.lat.toFixed(4)), lon: parseFloat(e.latlng.lng.toFixed(4))});
            $.post('/setMapPoint', {a: data}, function(res){
                locationReload(res.message);
            })
        }
    }

    var mapConstructor = function(){
        var markerIndex = 0;
        var iconclasses = {
            exclamation: 'font-size: 22px;',
            A: 'font-size: 22px;'
        };
        map = new L.Map('map', {
            center: [data[0].lat,data[0].lon],
            zoom: 13,
            zoomControl:false,
            leafletControl: false
        });
       

        map.on('click', onMapClick);

        L.tileLayer('http://maps.google.com/maps/vt?pb=!1m5!1m4!1i{z}!2i{x}!3i{y}!4i256!2m3!1e0!2sm!3i375060738!3m9!2spl!3sUS!5e18!12m1!1e47!12m3!1e37!2m1!1ssmartmaps!4e0').addTo(map);

        data.forEach(function(row){
            var pos = new L.LatLng(row.lat,row.lon);
            var iconclass = iconclasses[row.iconclass]?row.iconclass:'';
            var iconstyle = iconclass?iconclasses[iconclass]:'';
            var icontext = iconclass?'':row.iconclass;

             var icon = L.divIcon({
               className: 'map-marker '+iconclass,
               iconSize:null,
               html:'<div class="icon" style="'+iconstyle+'">'+icontext+'</div><div class="arrow" />',
               iconUrl: 'https://s3-us-west-2.amazonaws.com/s.cdpn.io/6362/marker.png'
             });

            var marker = L.marker(pos).addTo(map).setIcon(L.icon({
              iconUrl: 'data:image/svg+xml;utf8;base64,', // load your own custom marker image here
              iconSize: [56, 56],
              iconAnchor: [28, 28],
              popupAnchor: [0, -34]
        })).bindPopup('<button type="button" class="btn btn-danger btn-xs mb-3" onclick="removeMarker('+markerIndex+')">Удалить</button>');
        
        L.marker(pos,{icon: icon}).addTo(map);
        markerArray.push(marker);
        markerIndex += 1;
      });

      $('.leaflet-control a').remove();
    }
    
    $(document).ready(function(){  
        $.post('/getMapPoint', function(res){
            data = res.data;
            mapConstructor();
        });        
    });
</script>

