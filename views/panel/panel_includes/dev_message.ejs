<div class="modal fade" id="devmessagemodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Сообщение разработчику</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="preloaderBlock preloaderBlockMSG" style="display: none;">
                <div class="loader"></div>
            </div>
            <div class="modal-body">
                <div class="col-12">
                    <div class="card mt-12">
                        <div class="form-group">
                            <label for="themeMessage" class="col-form-label">Тема сообщения</label>
                            <input class="form-control" type="text" id="themeMessage">
                        </div>
                        <div class="form-group">
                            <label for="textMessage" class="col-form-label">Описание проблемы</label>
                            <textarea class="form-control" id="textMessage"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="linkMessage" class="col-form-label">Ссылка на проблемную страницу</label>
                            <input class="form-control ruClass" type="text" id="linkMessage">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" onclick="messageToDeveloper()">Отправить</button>
            </div>
        </div>
    </div>
</div>